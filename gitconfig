[user]
	name = Gabriel Cruz
	email = gabe@gmelodie.com

[rerere]
    enabled = 1
    autoupdate = 1

[commit]
    gpgsign = true

[github]
	user = gmelodie

[pull]
    rebase = interactive

[push]
    autoSetupRemote = true

[alias]
    a = add --all
    d = diff
    s = status
    c = commit
    l = log --oneline
    ch = checkout
    oops = commit --amend --no-edit
    unadd = restore --staged
    conflicts = diff --name-only --diff-filter=U
    whatadded = log --diff-filter=A
    blame = blame -w -C -C -C
    up = "!bash -c 'branch=$(git rev-parse --abbrev-ref HEAD); git stash && git checkout master && git pull && git checkout \"$branch\" && git rebase master && git stash pop'"

[difftool "idiff"]
	cmd = diff --unified=3 --color=always --ignore-case $LOCAL $REMOTE | less --raw-control-chars
    prompt = 0
    idiff = difftool --tool idiff

[include]
    path = ~/.gitconfig.local
